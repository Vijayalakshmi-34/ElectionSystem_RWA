@model ElectionSystem_RWA.ViewModels.CheckingViewModel
@{
    ViewBag.Title = "CandidateChecking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Candidate Checking</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(c => c.Name)
            @Html.TextBoxFor(c => c.Name,new { @class="form-control"})
            @Html.ValidationMessageFor(c=>c.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.UnitNumber)
            @Html.TextBoxFor(c => c.UnitNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.UnitNumber)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Age)
            @Html.TextBoxFor(c => c.Age, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.Age)
        </div>
        <div>
            <label class="field-validation-error">
                @Html.DisplayFor(c=>c.ErrorMessage)
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Next" class="btn btn-primary" />
        </div>
    }
</div>

